<section class="h-card">
	<h1><%= link_to @author.name, author_path(@author.uri_name), class: 'p-name u-url' %></h1>

	<% if @author.bio %>
		<div class="p-note">
			<%= @author.bio %>
		</div>
	<% end %>

	<% unless @author.stories.empty? %>
		<h2>Stories</h2>

		<ol>
			<% @author.stories.each do |story| %>
				<li><%= link_to story.title, story_path(story.orig_id) %></li>
			<% end %>
		</ol>
	<% end %>
</section>