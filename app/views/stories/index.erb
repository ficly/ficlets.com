<header class="content-header">
	<h1>Stories</h1>

	<p><%= page_entries_info @stories, model: 'stories' %>.</p>
</header>

<ol class="stories-list">
	<% @stories.each do |story| %>
		<li class="h-entry">
			<h2 class="title"><%= link_to story.title, story_path(story.original_id), class: 'p-name u-url' %></h2>

			<p class="meta">Written by <%= link_to story.author.name, author_path(story.author.uri_name), class: 'p-author h-card' %> and originally published on <time class="dt-pubished" datetime="<%= story.published_at.to_s(:iso8601) %>"><%= story.published_at.to_s(:display) %></time>.</p>
		</li>
	<% end %>
</ol>

<%= will_paginate @stories, role: 'navigation' %>