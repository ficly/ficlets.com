<article class="h-entry">
	<header>
		<h1><a href="/stories/<%= @story.orig_id %>" class="u-url p-name"><%= @story.title %></a></h1>

		<% if @story.is_mature %>
			<p><b>Warning:</b> This story contains mature themes and/or language.</p>
		<% end %>
	</header>

	<div class="e-content">
		<%= @story.body %>
	</div>

	<aside>
		<% if @story.photo_url %>
			<figure>
				<a href="<%= @story.photo_link %>"><img src="<%= @story.photo_url %>" alt=""></a>
				<figcaption>
					“<a href="<%= @story.photo_link %>"><%= @story.photo_title %></a>” by <%= @story.photo_author %>
				</figcaption>
			</figure>
		<% end %>

		<% unless @prequels.empty? %>
			<h1>Prequels</h1>

			<ol>
				<% @prequels.each do |prequel| %>
					<li><a href="/stories/<%= prequel.orig_id %>"><%= prequel.title %></a></li>
				<% end %>
			</ol>
		<% end %>

		<% unless @sequels.empty? %>
			<h1>Sequels</h1>

			<ol>
				<% @sequels.each do |sequel| %>
					<li><a href="/stories/<%= sequel.orig_id %>"><%= sequel.title %></a></li>
				<% end %>
			</ol>
		<% end %>
	</aside>

	<footer>
		<h1>About</h1>

		<p>This story was written by <a href="/authors/<%= @author.uri_name %>" class="p-author h-card"><%= @author.name %></a> and originally published on <time class="dt-pubished" datetime="<%= @story.published_at.to_s(:iso8601) %>"><%= @story.published_at.to_s(:display) %></time>.</p>

		<% unless @tags.empty? %>
			<h1>Tags</h1>

			<ul>
				<% @tags.each do |tag| %>
					<!-- <li><a href="/tags/<%= tag %>" class="p-category"><%= tag %></a></li> -->
					<li><%= tag %></li>
				<% end %>
			</ul>
		<% end %>
	</footer>
</article>